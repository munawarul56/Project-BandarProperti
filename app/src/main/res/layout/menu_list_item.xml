<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/ivGambar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/icon_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="360dp"
        android:background="@drawable/ic_star" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-"
            android:textSize="15dp"
            android:textStyle="bold" />


        <!-- Kamar Tidur -->

        <TextView
            android:id="@+id/txt_icon_kamar_tidur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Kamar Tidur"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_kamar_tidur"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_kamar_tidur" />

        <TextView
            android:id="@+id/jml_kamar_tidur"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"

            android:text="-"
            android:textSize="10dp"
            android:textStyle="bold" />


        <!-- Kamar Mandi -->

        <TextView
            android:id="@+id/txt_icon_kamar_mandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:text="Kamar Mandi"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_kamar_mandi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_kamar_mandi" />

        <TextView
            android:id="@+id/jml_kamar_mandi"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="55dp"
            android:text="-"
            android:textSize="10dp"
            android:textStyle="bold" />


        <!-- Luas -->

        <TextView
            android:id="@+id/txt_icon_luas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:text="Luas"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_luas"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_luas" />

        <TextView
            android:id="@+id/jml_luas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="55dp"
            android:text="-"
            android:textSize="10dp"
            android:textStyle="bold" />


        <!-- Harga -->
        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="80dp"
            android:text="Dijual"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/jml_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Rp."
            android:textSize="13dp"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

