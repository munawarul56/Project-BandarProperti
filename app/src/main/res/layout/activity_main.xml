<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/wave"
        app:mwhStartColor="@color/bandarcolour"
        app:mwhCloseColor="@color/bandarcolour2"

        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logo_bp"/>

<!--    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="#424242"-->
<!--        android:textSize="12dp"-->
<!--        android:textStyle="italic"-->
<!--        android:layout_marginTop="0dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:text="Bermitra dalam syariah"/>-->

    <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignIn"
        android:background="@drawable/button_react_color"
        android:textColor="#ffffff"
        android:text="Masuk"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>

    <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_rect"
        android:textColor="#FFAB00"
        android:text="Daftar"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>

    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>




</LinearLayout>
