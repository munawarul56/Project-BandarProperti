<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res/android">

    <data class="PropertyItemBinding" />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="true"
        android:background="@drawable/recycle_rect"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/propertyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/propertyImage"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:siShape="@drawable/image_corner_1"
                    android:src="@drawable/property"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/propertyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentStart="true"
                            android:gravity="top"
                            android:text="Royal De Khansa \nResidence"
                            android:textColor="@color/mainText"
                            android:textSize="14dp"
                            android:layout_toLeftOf="@+id/favorit_btn"/>

                        <com.like.LikeButton
                            android:id="@+id/favorit_btn"
                            app:icon_type="heart"
                            app:icon_size="20dp"
                            app:like_drawable="@drawable/ic_love_fill_yellow"
                            app:unlike_drawable="@drawable/ic_love_border_yellow"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/propertyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Type 260 "
                        android:textColor="@color/subText"
                        android:textSize="13dp" />

                    <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/propertyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Rp.465.000.000,-"
                        android:textColor="@color/mainText"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_bed" />

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/propertyBed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@drawable/ic_bathroom" />

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/propertyBath"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@drawable/ic_gerage" />

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/propertyGerage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_location" />

                <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/propertyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Desa Kalut,Ingin Jaya, \nAceh Besar"
                    android:textColor="@color/subText"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>