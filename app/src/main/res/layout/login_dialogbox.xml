<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289.9dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_gravity="center_horizontal">

    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Kasih !"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="21.2dp"/>
    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda dengan Nomor Invoice [###] sedang di proses."
        android:textColor="#111111"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="12.5sp"
        android:layout_marginTop="11.5sp"/>
    <com.bandarproperti.customfonts.Button_Roboto_Medium
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="OK"
        android:paddingHorizontal="50dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="45.1dp"
        android:background="@drawable/btnrectangle"/>
</LinearLayout>