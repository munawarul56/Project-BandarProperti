<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289.9dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_gravity="center_horizontal">

    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Akun!"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="21.2dp"/>
    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Login untuk melanjutkan tindakan Anda"
        android:textColor="#111111"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="12.5sp"
        android:layout_marginTop="11.5sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.bandarproperti.customfonts.Button_Roboto_Medium
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:text="LOGIN"
            android:paddingHorizontal="30dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/btnrectangle"/>

        <com.bandarproperti.customfonts.Button_Roboto_Medium
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="BATAL"
            android:paddingHorizontal="30dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="@drawable/btnrectangle_default"/>
    </LinearLayout>
</LinearLayout>