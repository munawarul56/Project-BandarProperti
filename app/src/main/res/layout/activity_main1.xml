<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity1">

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/waveHeader"
        app:mwhStartColor="@color/wavecolor"
        app:mwhCloseColor="@color/wavecolor"/>


    <ImageView
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logo_bp"/>

    <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignIn"
        android:background="@drawable/button_react_color"
        android:theme="@style/PrimaryButton"
        android:textColor="#ffffff"
        android:text="Masuk"
        android:layout_marginTop="110dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>

    <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_rect"
        android:theme="@style/PrimaryButton"
        android:textColor="#FFAB00"
        android:text="Daftar"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>

    <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>


    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/waveFooter"
        android:scaleY="-1"
        android:layout_marginTop="-60dp"
        app:mwhStartColor="@color/bandarcolour"
        app:mwhCloseColor="@color/bandarcolour2"/>




</LinearLayout>
