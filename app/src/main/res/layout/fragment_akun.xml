<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="FragmentNotificationBinding"/>

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/profile_image"
                    android:src="@drawable/profil1"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="120dp"
                    android:layout_width="120dp" />



                <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textColor="#050505"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <com.bandarproperti.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Edit Profil"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_email"/>

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/accountEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="-"
                            android:textColor="#FFA2A2A2"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_phone_black"/>

                        <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/accountPhone"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="-"
                            android:textColor="#FFA2A2A2"/>
                    </LinearLayout>
            </LinearLayout>


            <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_react_color"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="90dp"
                android:paddingRight="90dp"
                android:paddingTop="12dp"
                android:text="Masuk"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <com.bandarproperti.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/signOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_react_color"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="90dp"
                android:paddingRight="90dp"
                android:paddingTop="12dp"
                android:text="Keluar"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>